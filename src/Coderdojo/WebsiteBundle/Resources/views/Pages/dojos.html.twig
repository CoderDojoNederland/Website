{% extends "CoderdojoWebsiteBundle::index.html.twig" %}

{% block customjs %}
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

  <script>
    window._dojos = {};
    {% for dojo in dojos %}
      _dojos[{{dojo.id}}] = {
        id:           {{dojo.id}},
        name:         "{{dojo.name}}",
        location:     "{{dojo.location}}",
        street:       "{{dojo.street}}",
        housenumber:  "{{dojo.housenumber}}",
        postalcode:   "{{dojo.postalcode}}",
        city:         "{{dojo.city}}",
        slug:         "{{dojo.slug}}",
        facebook:     "{{dojo.facebook}}",
        twitter:      "{{dojo.twitter}}",
        website:      "{{dojo.website}}"
      }
    {% endfor %}
  </script>

  <script type="text/javascript" src="{{asset('bundles/coderdojowebsite/js/pages/dojos.js')}}"></script>
{% endblock customjs %}

{% block content %}
<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Vind een CoderDojo bij jou in de buurt</h1>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<div class="content-wrapper">

  <div id="all-dojos-map" class="map dojos-background">
  </div>

  <div class="container">
      <div class="row margin-bottom-30">
          <div class="col-md-5">
              <!--Orange Panels-->
              <div class="panel panel-orange">
                  <div class="panel-heading">
                      <h3 class="panel-title"><i class="icon-calendar"></i> Komende CoderDojo&apos;s</h3>
                  </div>
                  <div class="panel-body">
                      <table class="table">
                          <thead>
                              <tr>
                                  <th>&nbsp;</th>
                                  <th>Naam</th>
                                  <th>Datum</th>
                                  <th>Tickets</th>
                              </tr>
                          </thead>
                          <tbody>
                              {% if nextdojos|length > 0 %}
                                  {% for dojo in nextdojos %}
                                  <tr data-dojo-id="{{dojo.dojo.id}}" class="dojo-row">
                                      <td><strong>{{dojo.dojo.name|replace({'CoderDojo ':''})}}</strong></td>
                                      <td>{{dojo.name}}</td>
                                      <td>{{ dojo.date|localizeddate('none', 'none', 'nl_NL', null, "d MMMM Y")}}</td>
                                      <td><a href="{{ dojo.url }}" target="_blank" class="btn-u btn-u-small btn-u-green">Reserveer</a></td>
                                  </tr>
                                  {% endfor %}
                              {% else %}
                                  <tr>
                                      <td style="text-align:center;" colspan="3">Er zijn momenteel geen edities gepland</td>
                                  </tr>
                              {% endif %}
                          </tbody>
                      </table>
                  </div>
              </div>
              <!--End Orange Panels-->
          </div>
      </div>




      <hr class="margin-bottom-30">

      {% for dojo in dojos %}
          <div class="row">
              <div class="col-md-12">
                  <h3>{{ dojo.name }}</h3>
                  {# <p><strong>Status: </strong><span class="label label-warning">On Hold</span></p> #}
              </div>
          </div>
          <div class="row margin-bottom-30">
              <div class="col-md-6">
                  <img src="http://maps.googleapis.com/maps/api/staticmap?center={{dojo.street}}+{{dojo.housenumber}},{{dojo.postalcode}}+{{dojo.city}}&amp;zoom=9&size=555x180&maptype=roadmap
      &markers=color:green%7C{{dojo.street}}+{{dojo.housenumber}},{{dojo.postalcode}}+{{dojo.city}}&sensor=false" class="img-responsive"/>
              </div>
              <div class="col-md-3">
                  <p>
                      <a href="mailto:{{ dojo.email }}" class="btn-u btn-u-blue btn-block"><i class="icon-envelope"></i>&nbsp;&nbsp;Email</a><br/><br/>
                      <a href="{{ dojo.website }}" class="btn-u btn-u-blue btn-block"><i class="icon-globe"></i>&nbsp;&nbsp;Website</a><br/><br/>
                      <a href="http://twitter.com/{{ dojo.twitter }}" class="btn-u btn-u-blue btn-block"><i class="icon-twitter"></i>&nbsp;&nbsp;Twitter</a><br/><br/>
                      <a href="{{ dojo.facebook }}" class="btn-u btn-u-blue btn-block"><i class="icon-facebook"></i>&nbsp;&nbsp;&nbsp;&nbsp;Facebook</a>
                  </p>
              </div>
              <div class="col-md-3">
                  <p>
                      <strong>Locatie:</strong><br/>
                      {{ dojo.location }}<br/>
                      {{ dojo.street }} {{ dojo.housenumber }}<br/>
                      {{ dojo.postalcode }} {{ dojo.city }}
                  </p>
              </div>
          </div>
      {% endfor %}






      <div class="clearfix margin-bottom-40"></div>
  </div>
<div>
{% endblock %}

