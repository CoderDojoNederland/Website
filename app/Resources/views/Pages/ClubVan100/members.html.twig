{% extends "::index_v2.html.twig" %}
{% import "::Pages/ClubVan100/_member.html.twig" as club_member %}

{% block title %}Leden - Club van 100 &mdash; {{ parent() }}{% endblock %}
{% block fbtitle %}Leden - Club van 100 &mdash; {{ parent() }}{% endblock %}

{% block description %}
    Steun CoderDojo Nederland door lid te worden van de club van 100! Dit betekent dat jij elk jaar &euro;100,- doneert aan
    CoderDojo Nederland. Deze club bestaat uit 100 mensen / bedrijven waardoor de stichting zeker is van een jaarlijks inkomen.
{% endblock %}

{% block fbdescription %}
    Steun CoderDojo Nederland door lid te worden van de club van 100! Dit betekent dat jij elk jaar &euro;100,- doneert aan
    CoderDojo Nederland. Deze club bestaat uit 100 mensen / bedrijven waardoor de stichting zeker is van een jaarlijks inkomen.
{% endblock %}

{% block og_image %}https://www.coderdojo.nl{{asset('bundles/coderdojowebsite/img/fb-club100.png')}}{% endblock %}

{% block content %}
<!--=== Breadcrumbs ===-->
    <section class="g-bg-size-cover g-bg-pos-center g-bg-cover g-bg-black-opacity-0_5--after g-color-white g-py-50 g-mb-20" style="background-image: url({{ asset('/bundles/coderdojowebsite/img/headers/header_13.jpg') }});">
        <div class="container g-bg-cover__inner">
            <header class="g-mb-20">
                <h3 class="h5 g-font-weight-300 g-mb-5">De toppers die momenteel lid zijn van de club van 100</h3>
                <h2 class="h1 g-font-weight-300 text-uppercase">Huidige Leden</h2>
            </header>

            <ul class="u-list-inline">
                <li class="list-inline-item g-mr-7">
                    Home
                    <i class="fa fa-angle-right g-ml-7"></i>
                </li>
                <li class="list-inline-item g-mr-7">
                    Club van 100
                    <i class="fa fa-angle-right g-ml-7"></i>
                </li>
                <li class="list-inline-item g-mr-7">
                    Leden
                </li>
            </ul>
        </div>
    </section>
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<section class="col-lg-12 g-my-40">
    <div class="container">
        <div class="row g-mb-30">
            <div class="col-lg-2"></div>
            <div class="col-md-8 col-md-push-2">

                <img src="{{ asset('/bundles/coderdojowebsite/img/fb-club100.png') }}" alt="Club van 100" class="img-fluid g-mb-20"/>

                <div style="width: 100%; height: 50px; border: 1px solid #888888; position: relative;">
                    <div style="height: 100%; width: {{ total }}%; background: #e67e22;position:absolute;left:0;"></div>
                    <div style="position: absolute; top:3px;left:0;right:0; width: 100px;margin:auto;">
                        <p style="font-size: 24px;font-weight: bold">{{ total }}/100</p>
                    </div>
                </div>

                {% if members|length < total %}
                    <p style="font-style: italic;text-align: center;margin-top:5px;">Op deze pagina zie je {{ members|length }} van de {{ total }} leden. De overige leden wensen anoniem te blijven.</p>
                {% endif %}

                <div class="u-heading-v2-5--bottom g-brd-primary g-mb-20 g-mt-50">
                    <h2 class="u-heading-v2__title text-uppercase g-font-weight-300 mb-0">Dit zijn momenteel onze leden</h2>
                </div>

                {% for member in members if member.avatar is not null %}
                    {{ club_member.single(member) }}
                {% endfor %}
                {% for member in members if member.avatar is null %}
                    {{ club_member.single(member) }}
                {% endfor %}

                <section class="g-brd-around g-brd-gray-light-v4 g-pa-30">
                    <div class="d-md-flex justify-content-md-center text-center">
                        <div class="align-self-md-center">
                            <p class="lead g-font-weight-400 g-mr-20--md g-mb-15 g-mb-0--md">Wil je ook lid worden?</p>
                        </div>
                        <div class="align-self-md-center">
                            <a href="{{ path('club_of_100') }}" class="btn btn-md u-btn-primary"><i class="fa fa-pencil"></i>&nbsp;&nbsp;Meld je aan!</a>
                        </div>
                    </div>
                </section>

            </div>
        </div><!--/row-->

    </div><!--/container-->
</section>
<!--=== End Content Part ===-->
{% endblock %}
