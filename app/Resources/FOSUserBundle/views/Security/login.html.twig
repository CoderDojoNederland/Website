{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="card card-outline-success rounded-0">
        <h3 class="card-header h5 text-white bg-success g-brd-transparent rounded-0">
            <i class="fa fa-user g-font-size-default g-mr-5"></i>
            Inloggen
        </h3>

        <div class="card-block">
            <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
                <p>
                    Om jouw dojo te beheren moet je een persoonlijke account hebben op coderdojo.nl.
                    Met deze account kun je je aan meerdere dojo&apos;s koppelen als je bij meerdere dojo&apos;s actief bent.
                </p>
                <p>
                    Heb je nog geen account? <strong><a href="{{ path('fos_user_registration_register') }}">Maak een account aan!</a></strong>
                </p>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% if error %}
                    <p style="color:#ff0000;">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
                <div class="form-group row">
                    <label for="username" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword1" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" id="password" name="_password" required="required" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-offset-2 col-lg-10 g-mb-10">
                        <input type="submit" id="_submit" name="_submit" class="btn btn-block btn-success" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-offset-2 col-lg-10 text-center">
                        <a href="{{ path('fos_user_resetting_request') }}">Wachtwoord Vergeten</a> |
                        <a href="{{ path('fos_user_registration_register') }}">Account aanmaken</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock fos_user_content %}
