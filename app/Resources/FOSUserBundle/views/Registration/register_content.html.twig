{% trans_default_domain 'FOSUserBundle' %}



<div class="card card-outline-success rounded-0">
    <h3 class="card-header h5 text-white bg-success g-brd-transparent rounded-0">
        Account aanmaken
    </h3>

    <div class="card-block">
        <p class="margin-bottom-40">
            Ga jij namens jouw dojo dingen beheren op coderdojo.nl? Maak dan hier eerst een gebruikersaccount aan.<br/>
            <strong>Let op!</strong> Gebruik een persoonlijk email adres! Het emailadres van de dojo is al gekoppeld.
        </p>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal'}}) }}
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}

        <div class="form-group row">
            <div class="col-lg-2"></div>
            <div class="col-lg-offset-2 col-lg-10">
                {{ form_widget(form.consent) }}
                <label class="required control-label" for="fos_user_registration_form_consent">
                    Ik ga akkoord met de verwerking van mijn gegevens volgens de <a href="{{ path('privacy') }}" target="_blank">Privacy Verklaring</a>.
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-2"></div>
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" value="Account aanmaken" class="btn btn-block btn-success" />
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
